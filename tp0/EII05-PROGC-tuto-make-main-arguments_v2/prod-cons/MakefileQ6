CC=gcc -c
CFLAGS= -Wall -Wextra -MMD
LD=gcc
LDFLAGS=
LDLIBS=

producer.o: producer.c
	$(CC) $(CFLAGS) $<

consumer.o: consumer.c 
	$(CC) $(CFLAGS) $<

main.o: main.c 
	$(CC) $(CFLAGS) $<

init_conso_prod.o: init_conso_prod.c 
	$(CC) $(CFLAGS) $<

prod_cons: producer.o consumer.o main.o init_conso_prod.o
	$(LD) $^

include $(wildcard *.d)
